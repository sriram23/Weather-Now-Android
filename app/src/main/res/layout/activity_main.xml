<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background6"
    tools:context=".MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTrans1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="Last Updated on: 02-Oct-2019, 19:30 IST"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
    <TextView
        android:padding="10dp"
        android:id="@+id/TempMain"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/colorWhite"
        android:layout_weight="1"/>
    <TextView
        android:padding="10dp"
        android:id="@+id/City"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"/>

        <ImageView
            android:padding="10dp"
            android:id="@+id/country_flag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxWidth="60dp"
            android:maxHeight="60dp"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/WeatherImg"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:src="@drawable/ic_thunder" />

    <TextView
        android:id="@+id/WeatherDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather: Thunder Storm"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_high_temperature" />
            <TextView
                android:id="@+id/temp_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:text="30°C"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_low_temperature"/>
            <TextView
                android:id="@+id/temp_max"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:text="30°C"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:text="Wind"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:maxWidth="60dp"
        android:maxHeight="60dp"
        android:src="@drawable/ic_navigation" />
    <TextView
        android:id="@+id/WindSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:text="1.5 m/s"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sunny" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="02-Oct-2019, 6:10 IST"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_moon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="02-Oct-2019, 18:11 IST"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>

</LinearLayout>